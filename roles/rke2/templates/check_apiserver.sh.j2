#!/bin/sh
errorExit() {
    echo "*** $*" 1>&2
    exit 1
}
curl --silent --max-time 2 --insecure https://localhost:{{lbr_dest_port}}/ -o /dev/null || errorExit "Error GET https://localhost:{{lbr_dest_port}}/"
if ip addr | grep -q {{lbr_ipv4}}; then
    curl --silent --max-time 2 --insecure https://{{lbr_ipv4}}:{{lbr_dest_port}}/ -o /dev/null || errorExit "Error GET https://{{lbr_ipv4}}:{{lbr_dest_port}}/"
fi

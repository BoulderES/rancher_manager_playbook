
{% if active_server is defined %}
server: https://{{ lbr_ipv4 }}:9345
{% endif %}
token: {{ rke2_token }}
{% if inventory_hostname in groups[rke_servers_group_name] %}
cni: {{ rke2_cni }}
{% if rke2_server_taint %}
node-taint:
  - "CriticalAddonsOnly=true:NoExecute"
{% endif %}
tls-san:
  - cluster.local
  - {{ lbr_ipv4 }}
  - {{ kube_api_lb_host }}
  - {{ custom_k8s_cluster_rancher_host }}
{% for san in rke2_additional_sans %}
  - {{ san }}
{% endfor %}
{% endif %}
{% if rke2_disable and ( inventory_hostname|string() in groups[rke_servers_group_name] ) %}
disable: {{ rke2_disable }}
{% endif %}
{% if rke2_kube_apiserver_args is defined and inventory_hostname in groups[rke_servers_group_name] %}
kube-apiserver-arg: {{ rke2_kube_apiserver_args}}
{% endif %}
{% if ( k8s_node_label is defined ) %}
node-label:
{% for label in k8s_node_label %}
  - {{ label }}
{% endfor %}
{% endif %}
snapshotter: {{ rke2_snapshooter }}
node-name: {{ inventory_hostname }}
